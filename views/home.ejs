<%- include('header') -%>

<h2>Biblioth√®que</h2>
<table width="100%">
  <tr>
    <th align="left">Id</th>
    <th align="left">Titre</th>
    <th align="left">Date emprunt</th>
    <th align="left">Actions</th>
  </tr>
  <% for (const book of books){ %>
    <% let color = "green"%> 
    <% if(book.EstEmpruntee){ color = "orange"}%> 
    <tr>
      <td bgcolor=<%= color %> ><%= book.Id %></td>
      <td bgcolor=<%= color %> ><%= book.Titre %></td>
      <td bgcolor=<%= color %> ><%= book.DateEmprunt.getDate() %>/
        <%= book.DateEmprunt.getMonth()+1 %>/
        <%= book.DateEmprunt.getFullYear() %></td>
        <td bgcolor= <%= color %> ><%= book.EstEmpruntee %></td>
      </tr>
    <% } %>
</table>
